<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mpci.p2pchat"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.mpci.p2pchat.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mpci.p2pchat.UsersActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.mpci.p2pchat.UserProfile"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.mpci.p2pchat.HomeActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.mpci.p2pchat.ChatRoomActivity"
            android:label="@string/title_activity_chat_room" >
        </activity>
        <activity
            android:name="com.mpci.p2pchat.FriendsActivity"
            android:label="@string/title_activity_friends" >
        </activity>
    </application>

</manifest>